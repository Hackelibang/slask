#!/bin/bash

#Show the different colors available

echo -e "Foreground colors"
for effect in 0 1;do
    for i in {30..37};do
        echo -e "\033[$effect;${i}mNumber $effect;$i has this color\033[0m"

    done
done

echo -e "\nBackground colors"
for effect in 0 1;do
    for i in {40..47};do
      echo -e "\033[$effect;${i}mNumber $effect;$i has this color\033[0m"
    done
done

echo -e "\nForeground extra colors"
for effect in 0 1;do
    for i in {90..97};do
      echo -e "\033[$effect;${i}mNumber $effect;$i has this color\033[0m"
    done
done

echo -e "\nBackground extra colors"
for effect in 0 1;do
    for i in {100..107};do
      echo -e "\033[1;30;$effect;${i}mNumber $effect;$i has this color\033[0m"
    done
done

echo -e "\nText effects"
for i in 0 1 4 5 7 8;do
      echo -e "Number \033[${i};32;107m$i have this effect\033[0m"
done

echo -e "\nAll the colors"
for fgclr in {30..37};do
    for bgclr in {40..47};do
        echo -e "\033[${fgclr};${bgclr}mSome text with $fgclr;$bgclr\033[0m"
    done
done
for fgclr in {90..97};do
    for bgclr in {100..107};do
        echo -e "\033[${fgclr};${bgclr}mSome text with $fgclr;$bgclr\033[0m"
    done
done

