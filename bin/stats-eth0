#!/bin/bash

# Interface stats with rrdtool.
# Updates the db. Run every 60 secs
# 20160524/SDAA

RRD=~/rrd/eth0.rrd

#Input data to an array
#The first line apparently shows packets per sec
#DATA=($(/sbin/ifconfig -s eth0| awk '/eth0/{print $4" "$8}'))
DATA=($(/sbin/ifconfig  eth0| sed 's/:/ /g'|awk '/bytes/{print $3" "$8}'))

in=${DATA[0]}
out=${DATA[1]}

#echo "This is the input: $in $out"
rrdtool update $RRD N:$in:$out
