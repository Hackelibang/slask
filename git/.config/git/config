#
# Useful links:
#       https://github.com/thomd/dotfiles/blob/master/.gitconfig
#       https://github.com/jalcine/gitrc/blob/master/home/.gitconfig
#       http://durdn.com/blog/2012/11/22/must-have-git-aliases-advanced-examples/
#
# Line endings on Windows:
#      https://www.aleksandrhovhannisyan.com/blog/crlf-vs-lf-normalizing-line-endings-in-git/
#

[push]
	default = simple

[pull]
	ff = only

[diff]
	noprefix = true

[core]
	excludesFile = ~/.config/git/ignore
	attributesFile = ~/.config/git/attributes
	editor = emacsclient -t -a=
	autocrlf = input
	eol = lf
	filemode = false

[color]
	branch = true
	diff = true
	grep = true
	pager = true
	status = true
	ui = always
	interactive = always

[color "interactive"]
	error = red bold

[color "branch"]
	remote = red
	current = green
	upstream = yellow

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = green
	changed = yellow
	untracked = red

[grep]
	linenumber = true

# Rewrite Urls
[url "git@github.com/"]
	pushInsteadOf = https://github.com/

[url "git@github.com:"]
	pushInsteadOf = https://github.com/

[url "ssh://git@github.com:"]
	pushInsteadOf = https://github.com/

[url "git@gitlab.com/"]
	pushInsteadOf = https://gitlab.com/

[url "git@gitlab.com:"]
	pushInsteadOf = https://gitlab.com/

[url "ssh://git@gitlab.com:"]
	pushInsteadOf = https://gitlab.com/
	
#
# Include local or personal stuff from these files.
[include]
	path = ~/.config/git/alias	

[include]
	path = ~/.config/git/.gitconfig.local

[includeIf "gitdir/i:~/[rR]epos/**"]
	path = ~/.config/git/.gitconfig.private

[includeIf "gitdir/i:~/[vV]agrantdir/**"]
	path = ~/.config/git/.gitconfig.private

[includeIf "gitdir/i:**/[Uu]sers/**/[vV]agrantdir/**"]
	path = ~/.config/git/.gitconfig.private

[includeIf "gitdir/i:~/.config/**"]
	path = ~/.config/git/.gitconfig.private

# Work related configs
## Both in Windows and in WSL
[includeIf "gitdir/i:~/[wW]ork/**"]
	path = ~/.config/git/.gitconfig.work

[includeIf "gitdir/i:**/[Uu]sers/**/[wW]ork/**"]
	path = ~/.config/git/.gitconfig.work

[magit]
	hideCampaign = true
